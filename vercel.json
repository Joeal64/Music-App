{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/.next"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "ACRCLOUD_HOST": "@acrcloud_host",
    "ACRCLOUD_ACCESS_KEY": "@acrcloud_access_key", 
    "ACRCLOUD_ACCESS_SECRET": "@acrcloud_access_secret",
    "LASTFM_CLIENT_ID": "@lastfm_client_id",
    "LASTFM_CLIENT_SECRET": "@lastfm_client_secret"
  }
}
